<h1>Page with Responsive Sidebar</h1>
<div class="container mx-auto max-w-full px-1 mb-20 pl-4">
  <div class="grid grid-cols-2 pb-2">
    <div class="justify-self-end lg:hidden mr-4">
      <!--  Mobile menu button -->
      <button class="mobile-menu-button rounded h-10 w-10 bg-blue-900 text-white focus:outline-none focus:bg-blue-800 ">
        <div class="mx-auto h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <%= svg("filter-solid")  %>
        </div>
      </button>
    </div>
  </div>
  <div>
    <div class="relative min-h-screen md:flex">
      <div class="sidebar w-64 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out">
        <div class="pl-1 bg-gray-50 shadow border text-base">
          <div class="px-1 pb-2">
            <%= label_tag 'some_ext_field' %>
            <%= text_field :some_text_field, placeholder: "Contains", class: "block rounded-none rounded-l-md sm:text-sm border-gray-300" %>
          </div>
          <br>
          <hr>
          <div class="px-1 pb-2">
            <%= check_box_tag 'some_check_box' %>
            <%= label_tag "Some check box" %>
          </div>
        </div>
        <br>
      </div>
      <div class="ml-4 pl-4 bg-gray-50 shadow border w-full">
        Something
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag 'mobile_menu', async: true %>
